{
    "compilerOptions": {
        "target": "ES6",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "outDir": "dist",
        "rootDir": "./src/",
        "baseUrl": "./"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*",
        "types"
    ]
}